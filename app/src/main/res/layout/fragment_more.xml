<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".UI.Fragments.Admin.MoreFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/manage_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="إدارة مزود التدريبات "
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_manage_dark" />

            <TextView
                android:id="@+id/manage_trainee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="إضافة متدربين "
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_add_person" />

            <TextView
                android:id="@+id/manage_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="الإحصائيات "
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_analytics" />

            <TextView
                android:id="@+id/manage_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="خروج "
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_exit_dark" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>