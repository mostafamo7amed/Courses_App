<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragments.Admin.EditCoursesFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardBackgroundColor="@color/dark"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تعديل بيانات الدورة "
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/card1"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="بيانات الدورة"
                android:textSize="18sp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="مجال الدورة"
                android:textColor="@color/dark_text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edit_field_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:hint="مجال الدورة"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="المادة العلمية للدورة"
                android:textColor="@color/dark_text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edit_material_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:layout_marginVertical="10dp"
                android:hint="المادة العلمية للدورة"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_text"
                android:text="تاريخ بداية الدورة"
                android:layout_marginHorizontal="10dp"
               />
            <TextView
                android:id="@+id/edit_date_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:hint="ادخل التاريخ"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_text"
                android:text="وقت الدورة"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/edit_time_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:layout_marginVertical="10dp"
                android:hint="ادخل الوقت"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="رقم الدورة"
                android:textColor="@color/dark_text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edit_number_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:hint="رقم الدورة"
                android:inputType="number"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="رقم الجهة"
                android:textColor="@color/dark_text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edit_contact_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:hint="رقم الجهة "
                android:inputType="number"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="مدرب الدورة"
                android:textColor="@color/dark_text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edit_trainer_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:hint="مدرب الدورة"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:layout_marginVertical="10dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="العنوان"
                android:textColor="@color/dark_text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edit_address_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:hint="العنوان "
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="7dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="الوصف"
                android:textColor="@color/dark_text"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/edit_description_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="10dp"
                android:layout_marginVertical="10dp"
                android:hint="الوصف"
                android:inputType="textMultiLine"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_save_course"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_btu"
                android:text="حفظ التعديلات "
                android:textColor="@color/white"
                android:textSize="18sp">
            </androidx.appcompat.widget.AppCompatButton>

            <ProgressBar
                android:id="@+id/edit_progress_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:indeterminate="true"
                android:layout_marginBottom="50dp"
                android:indeterminateTint="@color/dark"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>