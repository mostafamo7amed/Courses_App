<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".UI.Fragments.Admin.Add_ContactsFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إضافة مزود تدريب"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:layout_margin="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="45dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cc_picture_man"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_person"
                    app:civ_border_color="@color/dark"
                    app:civ_border_width="2dp"
                    android:layout_height="match_parent"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/add_image_man"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="15dp"
                    android:background="@android:color/darker_gray"
                    app:cardCornerRadius="12.5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/darker_gray"
                        android:src="@drawable/ic_add"
                        android:contentDescription="TODO" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/cc_email_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="البريد الالكتروني "
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:maxLines="1"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <EditText
                android:id="@+id/cc_password_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="كلمة المرور "
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="number"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <EditText
                android:id="@+id/cc_name1_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الاسم الاول"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <EditText
                android:id="@+id/cc_name2_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الاسم الاخير "
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/cc_name_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                 />
            <EditText
                android:id="@+id/cc_phone_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الهاتف "
                android:text="+966"
                android:textColor="@color/black"
                android:inputType="number|phone"
                android:maxLines="1"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <EditText
                android:id="@+id/cc_region_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="المنطقة"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <EditText
                android:id="@+id/cc_commerce_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="السجل التجاري"
                android:inputType="text"
                android:maxLines="1"
                android:drawableStart="@drawable/ic_contact_page"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <RadioGroup
                android:id="@+id/cc_gender_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ذكر "
                    android:textColor="@color/dark_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="انثى"
                    android:textColor="@color/dark_text"
                    android:textSize="16sp" />
            </RadioGroup>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cc_save_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_btu"
                android:text="إضافة"/>

            <ProgressBar
                android:id="@+id/cc_progress_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/dark"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>