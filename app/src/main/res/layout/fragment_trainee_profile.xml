<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Fragments.Trainee.TraineeProfileFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardBackgroundColor="@color/dark"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الملف الشخصي"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>
        <ImageButton
            android:id="@+id/pt_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_margin="10dp"/>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"/>
            </FrameLayout>
            <EditText
                android:id="@+id/pt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الاسم "
                android:textColor="@color/white"
                android:maxLines="1"
                android:enabled="false"
                android:ellipsize="end"
                android:background="@drawable/edittext_shape_profile"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email"/>
            </FrameLayout>
            <EditText
                android:id="@+id/pt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mousdddddtafa03@gmail.com"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/edittext_shape_profile"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:enabled="false"
                android:forceHasOverlappingRendering="true"
                />

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_data"/>
            </FrameLayout>
            <EditText
                android:id="@+id/pt_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="المستوي التعليمي  "
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:enabled="false"
                android:background="@drawable/edittext_shape_profile"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                />

        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_age"/>
            </FrameLayout>
            <EditText
                android:id="@+id/pt_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="العمر "
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:enabled="false"
                android:background="@drawable/edittext_shape_profile"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                />

        </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pt_edit_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:visibility="invisible"
        android:background="@drawable/custom_btu"
        android:text="حفظ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <ProgressBar
        android:id="@+id/pt_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/dark"
        android:layout_marginHorizontal="10dp"
        android:visibility="invisible"/>

</LinearLayout>