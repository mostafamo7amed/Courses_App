<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".UI.Fragments.Admin.AddEmployeeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:text="بيانات الحساب "
                android:textColor="@color/dark_text" />

            <EditText
                android:id="@+id/ce_email_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:gravity="top"
                android:hint="البريد الالكتروني "
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:textColor="@color/dark_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ce_pass_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:gravity="top"
                android:hint="كلمة المرور "
                android:inputType="number"
                android:padding="7dp"
                android:textColor="@color/dark_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/ce_name1_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:gravity="top"
                android:hint="ألاسم الاول "
                android:inputType="text"
                android:padding="7dp"
                android:textColor="@color/dark_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ce_name2_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:gravity="top"
                android:hint="الاسم الاخير "
                android:inputType="text"
                android:padding="7dp"
                android:textColor="@color/dark_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ce_name_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:gravity="top"
                android:padding="7dp"
                android:textColor="@color/dark_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/ce_number_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:gravity="top"
                android:hint="رقم الموظف"
                android:text="+966"
                android:inputType="phone"
                android:padding="7dp"
                android:textColor="@color/dark_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="المنصب الوظيفي"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                />
            <Spinner
                android:id="@+id/ce_position_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/dark_text"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/ce_gender_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ذكر "
                    android:textColor="@color/dark_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="انثى"
                    android:textColor="@color/dark_text"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/ce_age_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/custom_input"
                android:gravity="top"
                android:hint="العمر"
                android:padding="7dp"
                android:textColor="@color/dark_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ce_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_btu"
                android:text="اضافة "
                android:textColor="@color/white"
                android:textSize="18sp" />
            <ProgressBar
                android:id="@+id/ce_progress_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginVertical="5dp"
                android:indeterminateTint="@color/dark"
                android:layout_marginHorizontal="20dp"
                android:visibility="invisible"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>