<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragments.Contacts.Add_CourseFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardBackgroundColor="@color/dark"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إضافة دورة "
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/card1"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="مجال الدورة "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="المادة العلمية للدورة "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="رقم الدورة "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="مدرب الدورة"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="العنوان "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="الوصف "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="textMultiLine"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="تاريخ بداية الدورة"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/dark_text"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="وقت الدورة"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="16sp"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/dark_text"
                android:padding="5dp"
                android:inputType="text"
                android:background="@drawable/custom_input"
                android:layout_marginHorizontal="10dp">
            </EditText>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_garage_info"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_btu"
                android:text="اضافة "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_below="@id/it_employee_problem_solve">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>