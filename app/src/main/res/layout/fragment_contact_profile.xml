<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Fragments.TrainingProvider.ContactProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardBackgroundColor="@color/dark"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الملف الشخصي"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>
        <ImageButton
            android:id="@+id/edit_profile_contact"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_margin="10dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="45dp"
            android:layout_gravity="center_vertical|start"
            android:background="@color/dark"
            android:elevation="8dp"
            app:cardElevation="10dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_contact"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_person"
                app:civ_border_color="@color/dark"
                android:clickable="false"
                android:focusable="false"
                app:civ_border_width="2dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/add_image"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray"
                app:cardCornerRadius="12.5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:src="@drawable/ic_add"
                    android:contentDescription="TODO" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <EditText
                android:id="@+id/cp_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="18sp"
                android:background="@drawable/edittext_shape_profile"
                android:layout_marginBottom="2dp"
                android:textAlignment="viewStart"
                android:text="User name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/dark_text"
                android:enabled="false"/>
            <EditText
                android:id="@+id/cp_number"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"
                android:background="@drawable/edittext_shape_profile"
                android:layout_marginBottom="2dp"
                android:textAlignment="viewStart"
                android:text="ID : 235635638537843"
                android:gravity="start"
                android:enabled="false"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email"/>
            </FrameLayout>
            <EditText
                android:id="@+id/cp_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mousdddddtafa03@gmail.com"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/edittext_shape_profile"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:enabled="false"
                android:forceHasOverlappingRendering="true"
                />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone"/>
            </FrameLayout>
            <EditText
                android:id="@+id/cp_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" رقم الهاتف"
                android:textColor="@color/white"
                android:maxLines="1"
                android:enabled="false"
                android:background="@drawable/edittext_shape_profile"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"/>
            </FrameLayout>
            <EditText
                android:id="@+id/cp_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="المنطقة "
                android:textColor="@color/white"
                android:maxLines="1"
                android:enabled="false"
                android:background="@drawable/edittext_shape_profile"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                />

        </LinearLayout>
    </FrameLayout>





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/frameshape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/framecircle"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_contact_page"/>
            </FrameLayout>
            <EditText
                android:id="@+id/cp_commerce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="السجل التجاري"
                android:textColor="@color/white"
                android:maxLines="1"
                android:enabled="false"
                android:background="@drawable/edittext_shape_profile"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                />

        </LinearLayout>
    </FrameLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cp_save"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:background="@drawable/button_shape"
        android:layout_margin="10dp"/>
    <ProgressBar
        android:id="@+id/cp_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:visibility="invisible"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>